<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Main"
    android:orientation="vertical"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:textSize="72sp"
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:layout_above="@+id/add_new_main"
        android:layout_centerHorizontal="true"
        android:textColor="@color/DarkBlue"
        android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Inventory"
            android:id="@+id/add_new_main"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/DarkBlue"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check-in Inventory"
            android:id="@+id/check_in_main"
            android:textColor="@color/DarkBlue"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_below="@+id/add_new_main"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_out"
            android:id="@+id/checkOut"
            android:layout_gravity="center"
            android:textColor="@color/DarkBlue"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_below="@+id/check_in_main"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


</RelativeLayout>
